<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>

<HBox
	xmlns:fx="http://javafx.com/fxml"
	stylesheets="@/game/trade/trade.css, @/game/trade/tradeparticipant/TradeParticipant.css"
	fx:controller="game.trade.tradeparticipant.TradeParticipantController"
	styleClass="tradeParticipant"
	alignment="CENTER_LEFT">
	<ImageView
		fx:id="playerImageView"
		fitWidth="30"
		preserveRatio="true">
	</ImageView>
	<Label
		fx:id="nameLabel"
		minWidth="200">
	</Label>
	<StackPane>
		<Label
			fx:id="acceptLabel"
			visible="false"
			minWidth="20">
		</Label>
		<Label
			fx:id="declineLabel"
			visible="false"
			minWidth="20">
		</Label>
		<Label
			fx:id="noResponseLabel"
			minWidth="20">
		</Label>
	</StackPane>

	<Button
		fx:id="finishButton"
		onAction="#finishTrade">
	</Button>
</HBox>
