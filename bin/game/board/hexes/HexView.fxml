<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.HBox?>

<Group xmlns:fx="http://javafx.com/fxml" fx:controller="game.board.hexes.HexController"
	opacity="0.0">
	<ImageView fx:id="hexView" preserveRatio="true" />
	<StackPane alignment="center" fx:id="token" visible="false">
		<Circle radius="15" fill="white" opacity="0.3" />
		<Label styleClass="token" fx:id="tokenLabel" opacity="0.8" />
	</StackPane>
	<HBox fx:id="probabilityMarkers">
	</HBox>
</Group>